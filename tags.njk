---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
---
<img class="b-content" src="{{ '/' | url }}static/img/banner-content.png">
<div class="wrapper">
  <h1>Tagged “{{ tag }}”</h1>

{% set postslist = collections[ tag ] %}
{% include "components/postslist.njk" %}

<nav>
  <a href="{{ '/blog/' | url }}">← Blog index</a>
</nav>
</div>
