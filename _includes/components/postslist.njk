<section>
	{% for post in postslist | reverse %}
		{% if post.data.tags %}
			{% for tag in post.data.tags %}
		  		{%- if tag == "post" -%}
					
					<article{% if post.url == url %} data-current="current item"{% endif %} class="gallery">	
						{% if post.data.thumbnail %}
							<img class="gallery" src="{{ '/' | url }}galery/img/{{ post.data.thumbnail }}">
							{% else %}
								<img class="gallery" src="{{ '/' | url }}static/img/no-image.png">
						{% endif %}						
						<div class="listgalery">						

							<h3>
								<a href="{{ post.url | url }}">
									{% if post.data.title %}								
										{{ post.data.title }}
									{% else %}
										Untitled
									{% endif %}
								</a>
							</h3>
							{% if post.data.summary %}
								<p class="summ">
									{{ post.data.summary }}
								</p>
							{% endif %}
							<p class="date">
								<time datetime="{{ post.date | machineDate }}">
									<small>{{ post.date | readableDate }} by {{ metadata.author.name }}</small>
								</time>
							</p>
						
							<p>
								
									{% set tagUrl %}/tags/{{ tag }}/{% endset %}
									<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
								
							</p>						
						</div>
					</article>
				{%- endif -%}
			{% endfor %}
		{% endif %}
	{% endfor %}
</section>