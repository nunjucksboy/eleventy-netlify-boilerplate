<section>
{% for cat in post.data.category %}
	{% if cat == "galery" %}
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>			
		</article>
	{% endfor %}
	{% else %}
        Kategori unknown
    {% endif %}
{% endfor %}
</section>
