<section class="m-footer">
     <div class="wrapper">  
          <div class="box-footer">
               <h3>POST TERBARU</h3>
               <ul>
                    <li>
                    {% for post in postslist | reverse %}
                         <aside {% if post.url == url %} data-current="current item"{% endif %}>
                              <h3>
                                   <a href="{{ post.url | url }}">
                                        {% if post.data.title %}                                             	
                                             {{ post.data.title }}
                                        {% else %}
                                             Untitled
                                        {% endif %}
                                   </a>
                              </h3>	

                              <p>
                                   <time datetime="{{ post.date | machineDate }}">
                                        <small>{{ post.date | readableDate }} by {{ metadata.author.name }}</small>
                                   </time>
                              </p>
                              
                         </aside>
                    {% endfor %}
                    </li>
