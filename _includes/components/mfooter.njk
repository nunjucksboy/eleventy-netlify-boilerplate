<section class="m-footer">
     <div class="wrapper">
          <div class="box-footer">
               <h3>KATAGORI</h3>
               <ul>
               {% set postslist = collections.posts %}
                    {% for post in postslist | reverse %}
                         <article{% if post.url == url %} data-current="current item"{% endif %}>			
                              {% if post.data.summary %}				
                                   <div>
                                        {% if post.data.tags %}
                                             <p>
                                                  {% for tag in post.data.tags %}                                                 
                                                       {% set tagUrl %}/tags/{{ tag }}/{% endset %}                                                       
                                                       <a href="{{ tagUrl | url }}" rel="tag">{{ post.data.navtitle }}</a>                                                  
                                                  {% endfor %}
                                             </p>
                                        {% endif %}
                                   </div>
                              {% endif %}
                         </article>
                    {% endfor %}
               </ul>
          </div>
          <div class="box-footer">
               <h3>BLOG</h3>
               <ul>
                    <li>
                    {% for post in postslist | reverse %}
                         <aside {% if post.url == url %} data-current="current item"{% endif %}>
                              <h3>
                                   <a href="{{ post.url | url }}">
                                        {% if post.data.title %}
                                             	
                                             {{ post.data.title }}
                                        {% else %}
                                             Untitled
                                        {% endif %}
                                   </a>
                              </h3>	

                              <p>
                                   <time datetime="{{ post.date | machineDate }}">
                                        <small>{{ post.date | readableDate }} by {{ metadata.author.name }}</small>
                                   </time>
                              </p>
                              
                         </aside>
                    {% endfor %}
                    </li>
               </ul>
          </div>
          <div class="box-footer">
               <h3>ARTIKEL</h3>
               <ul>
                    <li>{% set articleslist = collections.posts %}
                         {% include "components/articlelist.njk" %}
                    </li>
               </ul>

          </div>
     </div>
</section>
