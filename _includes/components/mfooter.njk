<section class="m-footer">
     <div class="wrapper">
          <div class="box-footer">
               <h3>KATAGORI</h3>
               <ul>
               {% set postslist = collections.posts %}
                    {% for post in postslist | reverse %}
                         <article{% if post.url == url %} data-current="current item"{% endif %}>			
                              {% if post.data.summary %}				
                                   <div>
                                        {% if post.data.tags %}
                                             <p>
                                                  {% for tag in post.data.tags %}                                                  
                                                       {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                                                  <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>                                                  
                                                  {% endfor %}
                                             </p>
                                        {% endif %}
                                   </div>
                              {% endif %}
                         </article>
                    {% endfor %}
               </ul>
          </div>
          <div class="box-footer">
               <h3>BLOG</h3>
               <ul>
                    <li>{% include "components/contentright.njk" %}</li>
               </ul>
          </div>
          <div class="box-footer">
               <h3>ARTIKEL</h3>
               <ul>
               {% set articleslist = collections.posts %}
                    {% for post in articleslist | reverse %}  
                         {% if post.data.tags %}
                              {% for tag in post.data.tags %}
                                   {%- if tag == "article" -%}                       
                                   <li>{% set tagUrl %}/tags/{{ tag }}/{% endset %}
								<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                                   </li>
                                   {%- endif -%}
                              {% endfor %}
                         {%- endif -%} 
                    {% endfor %}                             
               </ul>

          </div>
     </div>
</section>

