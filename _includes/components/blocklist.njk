<section class="blocklist">
	{% for post in postslist | reverse %}
		<aside {% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{% if post.data.thumbnail %}
							<img class="thumbnail1" src="{{ '/' | url }}static/img/{{ post.data.thumbnail }}">
						{% else %}
							<img class="thumbnail1" src="{{ '/' | url }}static/img/no-image.png">
						{% endif %}	
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>	

			<p>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }} by {{ metadata.author.name }}</small>
				</time>
			</p>
			
		</aside>
	{% endfor %}
</section>
