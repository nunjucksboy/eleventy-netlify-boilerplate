<section>
	{% for galery in galeryslist | reverse %}
		<article{% if galery.url == url %} data-current="current item"{% endif %}>
			
			<p>
				<time datetime="{{ galery.date | machineDate }}">
					<small>{{ galery.date | readableDate }} by {{ metadata.author.name }}</small>
				</time>
			</p>
			{% if galery.data.tags %}
				<p>
					{% for tag in galery.data.tags %}
		  			{%- if tag == "galery" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			    <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
          
		</article>
	{% endfor %}
</section>