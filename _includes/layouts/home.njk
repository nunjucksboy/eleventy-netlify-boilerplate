---
layout: layouts/base.njk
section: home
---
{% include "components/slider.njk" %}	
	
<div class="wrapper">
  {% include "components/iklan.njk" %}	
  
  <article class="main-cont-left">
      {{ layoutContent | safe }}
  </article>
  <article class="main-cont-right">
      {% include "components/contentright.njk" %}	
  </article>
</div>
{%
set food = {'ketchup': '5 tbsp','mustard': '1 tbsp','pickle': '0 tbsp'}
%}
{% for ingredient, amount in food %}
  Use {{ amount }} of {{ ingredient }}
{% endfor %}

<script>
    $(function () {
      // Slideshow 1
      $("#slider1").responsiveSlides({
        auto: true,
        pager: true,
        nav: true,
        speed: 500,
        maxwidth: 1366,
        namespace: "centered-btns"
      });
    });
</script>
